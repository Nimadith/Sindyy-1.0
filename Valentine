        Made with <i class="fas fa-heart" style="color: #ff5e8e;"></i> for you
    </div>

    <script>
        // Mobile-optimized JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            const heartsContainer = document.getElementById('hearts-container');
            const noBtn = document.getElementById('no-btn');
            const yesBtn = document.getElementById('yes-btn');
            const buttonsContainer = document.getElementById('buttons-container');
            const responseMessage = document.getElementById('response-message');
            
            const heartColors = ['#ff5e8e', '#ff3385', '#ff80ab', '#ffb6c1'];
            
            // Optimized heart creation for mobile
            function createHeart() {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.innerHTML = '<i class="fas fa-heart"></i>';
                
                // Mobile-optimized random properties
                const size = Math.random() * 20 + 12;
                const color = heartColors[Math.floor(Math.random() * heartColors.length)];
                const left = Math.random() * 100;
                const duration = Math.random() * 8 + 8;
                
                heart.style.left = `${left}vw`;
                heart.style.fontSize = `${size}px`;
                heart.style.color = color;
                heart.style.animation = `float ${duration}s linear forwards`;
                
                heartsContainer.appendChild(heart);
                
                // Remove heart after animation
                setTimeout(() => {
                    if (heart.parentNode) {
                        heart.remove();
                    }
                }, duration * 1000);
            }
            
            // Create initial hearts (fewer for mobile performance)
            for (let i = 0; i < 12; i++) {
                setTimeout(() => createHeart(), i * 300);
            }
            
            // Throttle heart creation for mobile
            let lastHeartTime = 0;
            const heartInterval = setInterval(() => {
                const now = Date.now();
                if (now - lastHeartTime > 800) {
                    createHeart();
                    lastHeartTime = now;
                }
            }, 800);
            
            // Mobile-optimized button movement
            function moveNoButton() {
                const containerRect = buttonsContainer.getBoundingClientRect();
                const btnRect = noBtn.getBoundingClientRect();
                
                // Calculate safe movement area
                const maxX = containerRect.width - btnRect.width - 10;
                const maxY = containerRect.height - btnRect.height - 10;
                
                // Ensure we don't go out of bounds
                const safeX = Math.max(10, Math.min(maxX, Math.random() * maxX));
                const safeY = Math.max(10, Math.min(maxY, Math.random() * maxY));
                
                noBtn.style.position = 'absolute';
                noBtn.style.left = `${safeX}px`;
                noBtn.style.top = `${safeY}px`;
                
                // Add visual feedback
                noBtn.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    noBtn.style.transform = 'scale(1)';
                }, 150);
            }
            
            // Touch events for mobile
            let touchStartTime;
            
            noBtn.addEventListener('touchstart', function(e) {
                e.preventDefault();
                touchStartTime = Date.now();
                moveNoButton();
                
                // Haptic feedback if available
                if (window.navigator.vibrate) {
                    window.navigator.vibrate(50);
                }
            });
            
            noBtn.addEventListener('touchend', function(e) {
                e.preventDefault();
                // If touch was very brief, move again (quick tap)
                if (Date.now() - touchStartTime < 200) {
                    setTimeout(moveNoButton, 100);
                }
            });
            
            // Mouse events for desktop compatibility
            noBtn.addEventListener('mouseover', moveNoButton);
            noBtn.addEventListener('click', function(e) {
                e.preventDefault();
                moveNoButton();
            });
            
            // Yes button with touch feedback
            yesBtn.addEventListener('touchstart', function() {
                this.style.transform = 'scale(0.95)';
            });
            
            yesBtn.addEventListener('touchend', function() {
                this.style.transform = 'scale(1)';
                handleYesClick();
            });
            
            yesBtn.addEventListener('click', handleYesClick);
            
            function handleYesClick() {
                // Hide buttons and show response
                buttonsContainer.classList.add('hidden');
                responseMessage.classList.remove('hidden');
                
                // Clear heart interval
                clearInterval(heartInterval);
                
                // Celebration effect
                let celebrationCount = 0;
                const celebrationInterval = setInterval(() => {
                    createCelebrationHeart();
                    celebrationCount++;
                    
                    if (celebrationCount >= 20) {
                        clearInterval(celebrationInterval);
                    }
                }, 100);
                
                // Scroll to response on mobile
                responseMessage.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            }
            
            function createCelebrationHeart() {
                const heart = document.createElement('div');
                heart.classList.add('heart');
                heart.innerHTML = '<i class="fas fa-heart"></i>';
                
                const size = Math.random() * 30 + 15;
                const color = heartColors[Math.floor(Math.random() * heartColors.length)];
                const left = Math.random() * 100;
                
                heart.style.left = `${left}vw`;
                heart.style.fontSize = `${size}px`;
                heart.style.color = color;
                heart.style.animation = `float 2.5s linear forwards`;
                heart.style.zIndex = '20';
                
                heartsContainer.appendChild(heart);
                
                setTimeout(() => {
                    if (heart.parentNode) {
                        heart.remove();
                    }
                }, 2500);
            }
            
            // Prevent zoom on double tap
            let lastTouchEnd = 0;
            document.addEventListener('touchend', function(event) {
                const now = Date.now();
                if (now - lastTouchEnd <= 300) {
                    event.preventDefault();
                }
                lastTouchEnd = now;
            }, false);
            
            // Handle orientation change
            let resizeTimeout;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(() => {
                    // Reset button position on resize
                    noBtn.style.position = '';
                    noBtn.style.left = '';
                    noBtn.style.top = '';
                }, 250);
            });
        });
    </script>
</body>
</html>
